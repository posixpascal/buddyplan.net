<!DOCTYPE html>
<html>
<head>
  <title>ShootingSchedule</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<%= render partial: "partials/navigation" %>
<div class="container">
  <div class="row">
    <% if current_user %>
      <div class="col-sm-3">
        <div class="pt-5 sidebar">
          <%= render partial: "partials/sidebar", movie: @movie %>
        </div>
      </div>
    <% end %>
    <div class="
      <% if current_user %>col-sm-9
      <% else %>col-sm-12
      <% end %>">
      <div class="pt-5">
        <%= content_for :breadcrumbs %>
        <div class=" content-wrapper">
          <div class="content-wrapper-title"><%= content_for :title %></div>
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= bootstrap_class_for_flash key %>">
              <%= value %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>
          <%= yield %>
        </div>
        <br><br>
        <%= content_for :another_card %>
      </div>
    </div>
  </div>
</div>
</body>
</html>
