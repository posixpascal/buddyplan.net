  <%= link_to with_icon("map", "Locations"), movie_locations_path(@movie), class: "list-group-item list-group-item-action #{'active' if params[:controller].starts_with?  "movies/locations"}" %>
  <%= link_to with_icon("scene", "Scenes"), movie_scenes_path(@movie), class: "list-group-item list-group-item-action #{'active' if params[:controller].starts_with?  "movies/scenes"}" %>
  <%= link_to with_icon("role", "Roles"), movie_roles_path(@movie), class: "list-group-item list-group-item-action #{'active' if params[:controller].starts_with?  "movies/roles"}" %>
  <%= link_to with_icon("inventory", "Inventory"), movie_inventories_path(@movie), class: "list-group-item list-group-item-action #{'active' if params[:controller].starts_with?  "movies/inventories"}" %>
  <%= link_to with_icon("money", "Budget"), movie_budget_path(@movie), class: "list-group-item list-group-item-action #{'active' if params[:controller].starts_with?  "movies/budget"}" %>
  <%= link_to with_icon("file", "Documents"), movie_documents_path(@movie), class: "list-group-item list-group-item-action #{ 'active' if params[:controller].starts_with?  "movies/documents"}" %>
  <%= link_to with_icon("car", "Cars"), movie_cars_path(@movie), class: "list-group-item list-group-item-action #{ 'active' if params[:controller].starts_with?  "movies/cars"}" %>
  <%= link_to with_icon("calendar", "Schedule"), movie_schedule_path(@movie), class: "list-group-item list-group-item-action #{'active' if params[:controller].starts_with?  "movies/schedule"}" %>
</div>
