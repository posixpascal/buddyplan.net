<%= content_for :title do %>Contact Importer<% end %>



<% if @contact_entries.size %>
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
    </thead>
    <tbody>
    <% @contact_entries.each do |ce| %>
      <tr>
        <td><%= ce.firstname %> <%= ce.lastname %></td>
        <td><%= link_to 'Import', new_import_entry_movie_actors_path(@movie, ce) %></td>
        <td><%= link_to 'Destroy',delete_import_entry_movie_actors_path(@movie, ce), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
