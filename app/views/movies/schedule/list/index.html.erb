<%= content_for :title do %>
  Shooting Schedules
<% end %>


<% if @actors.size == 0 %>
  <%= empty_resource Actor, cta: new_movie_actor_path %>
<% end %>

<% if @actors.size %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Name</th>
        <th colspan="4"></th>
      </tr>
      </thead>
      <tbody>
      <% @actors.each do |actor| %>
        <tr>
          <td><%= actor.firstname %> <%= actor.lastname %></td>
          <td><%= link_to 'Schedule', shorten_url(actor_movie_schedule_path(@movie_, actor)) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
<% end %>
</div>
