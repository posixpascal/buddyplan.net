<div class="">
  <i class="lead-icon fa fa-car fa-fw fa-2x"></i>
  <div class="row p-3">
    <div class="col-sm-6">
      <% if @event.schedulable.location %>
        <i class="fa fa-fw fa-map-pin"></i> <%= link_to @event.schedulable.location&.name, edit_movie_location_path(@movie, @event.schedulable.location) %>
        <br><br>
      <% end %>
      <% if @event.schedulable.scheduled_on %>
        <i class="fa fa-fw fa-clock-o"></i> <%= @event.schedulable.scheduled_on.strftime("%H:%M") %>
        <br><br>
      <% end %>

      <% if @event.event_participants.count %>
        <i class="fa fa-fw fa-users"></i> <%= @event.event_participants.count %>
        <%= participants @event.event_participants %>
        <br><br>
      <% end %>

      </div>
    <div class="col-sm-6">
      <% if @event.schedulable.car %>

        <i class="fa fa-fw fa-car"></i> <%= link_to @event.schedulable.car.readable_name, edit_movie_car_path(@movie, @event.schedulable.car) %>
        <br><br>
      <% end %>


      <% if @event.schedulable.estimate %>
          <i class="fa fa-fw fa-hourglass-2"></i> <%= @event.schedulable.estimate %> minutes
      <% end %>

      <br><br>
      <%= link_to "Edit", edit_movie_schedule_event_ride_event_path(@movie, @event, @event.schedulable), class: "btn btn-sm btn-outline-primary" %>
      <%= link_to "Delete", movie_schedule_event_ride_event_path(@movie, @event, @event.schedulable), method: "delete", class: "btn btn-sm btn-outline-primary" %>

    </div>
  </div>
</div>
<hr style="margin: 10px -15px">
